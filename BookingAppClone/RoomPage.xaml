            <StackLayout Orientation="Horizontal" Margin="10">
                <StackLayout>
                    <Label  Text="Capacidad para 0 de 2" FontSize="18" TextColor="Black" FontAttributes="Bold"/>
                    <Label Text="adultos"/>
